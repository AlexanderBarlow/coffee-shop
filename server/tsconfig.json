// server/tsconfig.json

{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "outDir": "./dist", // Specify the output directory for transpiled JavaScript files
      "rootDir": "../server", // Specify the root directory of your TypeScript source files
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "declaration": true,
      "sourceMap": true,
      "removeComments": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "./models/**/*.ts" // Specify the files you want to include for compilation
    ]
  }
  